<% if target.empty? %>
  <h2 align="center"> Oh no products here! </h2>
<% else %>
  <ul class="small-block-grid-3"> 
    <% target.each do |p| %>
      <li><%= image_tag p.image, :class => "th"%>
      <p><%= number_to_currency(p.price, :unit => "&pound") %></p>
      <p><%= link_to p.name.capitalize, product_path(p.slug) %></p></li>
     <% end %>
  </ul>
<% end %>    