<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title><%= "Blind-Love" %></title>

    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "vendor/modernizr" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <nav class="top-bar" data-topbar data-options="is_hover: false">
      <ul class="title-area">       
        <li class="name">
          <h1><%= link_to "Blind Love", root_path %></h1>
        </li>
      </ul>
      <section class="top-bar-section">

        <ul class="left">
          <li class="has-dropdown">
            <a href "#">Departments</a>
              <ul class="dropdown">
                <li class="has-dropdown">
                  <% department.each do |department| %>
                    <%= link_to department.department_name.capitalize, department_path(department.department_name.to_sym) %>
                    <ul class="dropdown">
                      <% categories(department.department_name).each do |c| %>
                        <li><%= link_to c.category.category_name, department_category_path(@department.slug,c.category.slug)%></li>
                      <% end %>
                    </ul>
                  <% end %>
                </li>
              </ul>
          </li>
          <li class="divider"></li>
          <li><%= link_to "Basket", current_basket %></li>
        </ul>

        <ul class="right">
          <% if current_user %>
            <li class="has-dropdown">
              <%= link_to current_user.email, user_path(current_user) %>
                <ul class="dropdown">
                  <li><%= link_to "Log Out", logout_path(@user) %></li>
                </ul>
            </li>
          <% else %>
              <li><%= link_to "Log In", new_user_session_path %></li>
          <% end %>
          <li class="has-form">
            <div class="row">
              
              <div class="small-9 columns">        
                <%= form_tag(searches_path, method: "get") do %>
                   <%= text_field_tag(:query, "Search for Products") %>     
              </div>
              
              <div class="small-3 columns">
                  <%= submit_tag("Go", :class => "alert button expand") %>
                <% end %>
              </div>
            </div>
          </li>
        </ul>  
      </secton>
    </nav>

    <% unless flash.empty? %>
      <% flash.each do |name, msg| %>
        <% name ? 'success' : 'warning' %>
        <div data-alert class="alert-box <%= name %> radius">
          <%= "#{msg}!" %>
        </div>
      <% end %>
  <% end %>

    <%= javascript_include_tag "application" %>

    <%= yield %>
  </body>
</html>