<button type="button" class="close" data-dismiss="alert">&times;</button>
  <p><%= flash[:notice] %></p>

 <div class="container-fluid">
  <div class="row-fluid">
    <% @cp.each do |p| %>
      <ul class="thumbnails"> 
        <li class="span9">
          <%= image_tag p.image %>
        </li>
        <p><%= p.price %></p>
        <p><%= link_to p.name, product_path(p.slug) %></p>
      </ul>
    <% end %>
  </div>
</div>