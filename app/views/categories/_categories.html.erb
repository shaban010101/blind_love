<button type="button" class="close" data-dismiss="alert">&times;</button>
  <p><%= flash[:notice] %></p>

 <div class="container-fluid">
  <div class="row-fluid">
    <div class="span2">
      <%= form_tag(category_path(params[:id]), :method => "post") do %>
        <%= select_tag(:ordering, options_for_select([["Lowest","ASC"],["Highest", "DESC"]], params[:ordering] )) %>
        <% ranges = @pr.map  %>
          <%= select_tag(:minimum, options_for_select(ranges, params[:minimum])) %>
          <%= select_tag(:maximum, options_for_select(ranges, params[:maximum])) %>
        <%= submit_tag "Filter", :class => "btn" %>
      <% end %>
    </div>
      <% if @cp.empty? %>
        <h2> Oh no products here! </h2>
      <% else %>
        <% @cp.each do |p| %>
          <ul class="thumbnails"> 
            <li class="span9">
              <%= image_tag p.image %>
            </li>
            <p> &#163 <%= p.price %></p>
            <p> <%= p.ranges %> </p>
            <p><%= link_to p.name, product_path(p.slug) %></p>
          </ul>
        <% end %>
      <% end %>  
  </div>
</div>