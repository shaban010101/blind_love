<%= form_tag(category_path(@cat), :method => "post") do %>
  <%= select_tag(:ordering, options_for_select([["Ascending","ASC"],["Descending", "DESC"]], params[:ordering] ), :prompt => "Select an order") %>
  <% ranges = @pr.map %>
  <%= select_tag(:minimum, options_for_select(ranges, :selected => ranges.min )) %>
  <% params[:minimum] %>
  <%=  select_tag(:maximum, options_for_select(ranges,:selected => ranges.max)) %>
  <% params[:maximum] %>
  <% sizes = Size.all.map { |s| [s.size_name, s.id] } %>
  <%= select_tag(:size, options_for_select(sizes, :selected => nil ), :prompt => "Select a size") %>
  <% params[:size] %>
  <%= submit_tag "Filter", :class => "btn" %>
<% end %>