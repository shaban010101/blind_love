<%= form_for :order, :url => { :action => "create" }, :class => "horizontal" do |f| %>

  <% if @order.errors.any? %>
    <div class="alert alert-error">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <h4><%= pluralize(@order.errors.count, "error") %> Stopped this order being made:</h4>
      <ul>
        <% @order.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

 <div id="shipping-details">
    <h2> Shipping Details </h2>

    <div class="control-group">
      <label class="control-label">
        <%= f.label(:title) %>
      </label>
      <div class="controls">
        <%= f.select :title, options_for_select(["Mr", "Mrs", "Miss", "Dr"]) %>
      </div> 
    </div>
    <div class="control-group">
      <label class="control-label">
        <%= f.label(:first_name) %>
      </label>
      <div class="controls">
        <%= f.text_field(:first_name) %>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label">
        <%= f.label(:last_name) %>
      </label>
      <div class="controls">
        <%= f.text_field(:last_name) %>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label">
        <%= f.label(:address_1) %>
      </label>
      <div class="controls">
        <%= f.text_field(:address_1) %>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label">
        <%= f.label(:address_2) %>
      </label>
      <div class="controls">
        <%= f.text_field(:address_2) %>
      </div>
    </div>
  </div>
  <%= f.submit("Next", :class => "btn") %>

  <div id="stripe_error">
    <noscript>JavaScript is not enabled and is required for this form. First enable it in your web browser settings.</noscript>
  </div>
<% end %>

<p><%= @order.product_totals %><p>