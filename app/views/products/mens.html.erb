<button type="button" class="close" data-dismiss="alert">&times;</button>
  <p><%= flash[:notice] %></p>

 <div class="container-fluid">
  <div class="row-fluid">
    <% @product.each do |p| %>
      <div class="product"> 
        <div class="product-image">
          <%= image_tag p.image %>
        </div>
        <p><%= p.price %></p>
        <p><%= link_to p.name, product_path(p.slug) %></p>
    <% end %>
    </div>
  </div>
</div>