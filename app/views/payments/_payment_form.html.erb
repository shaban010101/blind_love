<div class="control-group">
  <label class="control-label">
    <%= label_tag(:card_no, "Card Number") %>
  </label>
  <div class="controls">
    <%= f.text_field :number %>
  </div>
</div>

<div class="control-group">
  <label class="control-label">
    <%= label_tag(:CVC) %>
  </label>
  <div class="controls">
    <%= f.text_field :cvc %>
  </div>
</div>
<div class="control-group">
  <label class="control-label">
    <%= label_tag(:expiry_month) %>  
  </label>
  <div class="controls">
    <%= f.text_field(:month) %>
  </div>
</div>
<div class="control-group">
  <label class="control-label">
    <%= label_tag(:expiry_year) %>  
  </label>
  <div class="controls">
    <%= f.text_field(:year) %>
  </div>
  <%= f.hidden_field(:user_id, :value => current_user.id) %>
  <%= f.submit(:class => "btn") %>