<h1> Orders </h1>

<div class="container">
  <table class="table table-hover">
    <tr>
      <th>Order number</th>
      <th>Order total</th>
      <th>Status</th>
    </tr>
      <% @orders.each do |order| %>
    <tr>
        <td><p><%= order.id %></p></td>
        <td><p><%= order.total %></p></td>
        <td><p><%= order.status %></p></td>
    </tr>
    <% end %>
  </table>
</div>