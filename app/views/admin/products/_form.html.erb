<%= form_for :product, :url => { :action => "create" } do |f| %>
	<%= render 'shared/error_messages', :target => @product %>
	<div class="product-form">
		<form class="form-horizontal">
			<div class="control-group">
				<label class="control-label">
					<%= f.label :name %>
				</label>
				<div class="controls">
					<%= f.text_field :name %>
				</div>
			</div>
			<div class="control-group">
				<label class="control-label">
					<%= f.label :description %>
				</label>
				<div class="controls">
				  	<%= f.text_area :description, rows: 6 %>
				 </div>
			</div>
			<div class="control-group">
			 	<label class="control-label">
			  	<%= f.label :image %>
			  </label>
			  <div class="controls">
			  	<%= f.file_field :image %>
			  </div>
			</div>
		  <div class="control-group">
		  	<label class="control-label">
		  		<%= f.label :price %>
		  	</label>
		  	<div class="controls">
		  		<%= f.text_field :price %>
		  	</div>
			</div>
		  <div class="control-group">
		  	<div class="controls">
			  	<button class="btn">
			  		<%= f.submit %>
			  	</button>
			  </div>
			</div>
		</div>
<% end %>
