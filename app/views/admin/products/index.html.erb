<div class="alert alert-success">
	<p><%= flash[:notice] %></p>
</div>

<table class="table table-hover">
		<tr>
			<th>Name</th>
			<th>Price</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>
		<tr>
		<% @products.each do |p| %>
			<td><p><%= p.name %><p></td>
			<td><p><%= p.price %><p></td>
