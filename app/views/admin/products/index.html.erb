<div class="alert alert-success">
	<p><%= flash[:notice] %></p>
</div>
<div class="container">
	<table class="table table-hover">
		<tr>
			<th>Name</th>
			<th>Price</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>
		<tr>
			<% @products.each do |p| %>
				<td><p><%= p.name %><p></td>
				<td><p><%= p.price %><p></td>
				<td><%= link_to 'Show', admin_product_path(p) %></td>
				<td><%= link_to 'Edit', edit_admin_product_path(p) %></td>
				<td><%= link_to 'Remove', admin_product_path(p), method: :delete, data: { :confirm => 'Are you sure?' } %></td>
			</tr>
		<% end %>
		</table>
		<div class="pagination">
			<ul>
				<li><%= will_paginate @products %></li>
			</ul>
		</div>
	</div>


	